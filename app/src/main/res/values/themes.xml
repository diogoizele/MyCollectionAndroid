<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary_900</item>
        <item name="colorPrimaryVariant">@color/brand_primary_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_primary_900</item>
        <item name="colorSecondaryVariant">@color/brand_primary_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="colorTextPrimary">@color/neutral_900</item>
        <item name="colorTextSecondary">@color/neutral_600</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorSurface">@color/neutral_50</item>

        <item name="materialButtonStyle">@style/Widget.MyCollectionAndroid.Button</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Widget.MyCollectionAndroid.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.MyApp.ChipFilter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

        <!-- Cores -->
        <item name="chipBackgroundColor">@color/chip_background_colors</item>
        <item name="android:textColor">@color/chip_text_colors</item>
        <item name="chipStrokeColor">@color/chip_stroke_colors</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>